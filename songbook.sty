\newcommand{\songcover}{}
\newsongkey{cov}{\let\songcover\@empty}{\def\songcover{#1}}
\newcommand\cover{%
  \ifchorded%
    \ifx\songcover\@empty\else%
      \mbox{%
        \includegraphics[height=\coverheight]{\songcover}%
        \hspace{\coverspace}%
      }%
    \fi%
  \fi%
}

